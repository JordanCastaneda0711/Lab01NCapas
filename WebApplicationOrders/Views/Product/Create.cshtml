@model Entities.Models.Product

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-4">
    <h1 class="mb-4">Crear Producto</h1>

    <form asp-action="Create">
        <div class="form-group mb-3">
            <label asp-for="ProductName" class="form-label">Nombre del Producto</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="UnitPrice" class="form-label">Precio Unitario</label>
            <input asp-for="UnitPrice" class="form-control" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Package" class="form-label">Paquete</label>
            <input asp-for="Package" class="form-control" />
            <span asp-validation-for="Package" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="IsDiscontinued" class="form-label">Descontinuado</label>
            <input asp-for="IsDiscontinued" type="checkbox" class="form-check-input" />
            <span asp-validation-for="IsDiscontinued" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="SupplierId" class="form-label">ID del Proveedor</label>
            <input asp-for="SupplierId" class="form-control" />
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Volver a la Lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
