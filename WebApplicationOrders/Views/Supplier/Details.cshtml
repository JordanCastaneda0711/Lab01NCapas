@model Entities.Models.Supplier

@{
    ViewData["Title"] = "Detalles del Proveedor";
}

<div class="container mt-4">
    <h1 class="mb-4">Detalles del Proveedor</h1>

    <div class="card shadow-lg">
        <div class="card-body">
            <h4 class="mb-4">Proveedor</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    ID
                </dt>
                <dd class="col-sm-10">
                    @Model.Id
                </dd>
                <dt class="col-sm-2">
                    Nombre de la Empresa
                </dt>
                <dd class="col-sm-10">
                    @Model.CompanyName
                </dd>
                <dt class="col-sm-2">
                    Nombre del Contacto
                </dt>
                <dd class="col-sm-10">
                    @Model.ContactName
                </dd>
                <dt class="col-sm-2">
                    Título del Contacto
                </dt>
                <dd class="col-sm-10">
                    @Model.ContactTitle
                </dd>
                <dt class="col-sm-2">
                    Ciudad
                </dt>
                <dd class="col-sm-10">
                    @Model.City
                </dd>
                <dt class="col-sm-2">
                    País
                </dt>
                <dd class="col-sm-10">
                    @Model.Country
                </dd>
                <dt class="col-sm-2">
                    Teléfono
                </dt>
                <dd class="col-sm-10">
                    @Model.Phone
                </dd>
                <dt class="col-sm-2">
                    Fax
                </dt>
                <dd class="col-sm-10">
                    @Model.Fax
                </dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</div>
