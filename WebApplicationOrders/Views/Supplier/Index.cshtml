@model List<Entities.Models.Supplier>

@{
    ViewData["Title"] = "Lista De Proveedores";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Lista De Proveedores</h1>

    <p class="text-end mb-4">
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus"></i> Crear Proveedor
        </a>
    </p>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Nombre Empresa</th>
                        <th>Nombre Contacto</th>
                        <th>Ciudad</th>
                        <th>País</th>
                        <th>Teléfono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.CompanyName</td>
                            <td>@item.ContactName</td>
                            <td>@item.City</td>
                            <td>@item.Country</td>
                            <td>@item.Phone</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i> Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center">No hay proveedores disponibles.</p>
    }
</div>
